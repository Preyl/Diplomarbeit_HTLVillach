@model IEnumerable<DataDictionary.Models.Datentyp>

@{
    ViewBag.Title = "Datentyen";
}

<h2>Datentyen</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>
        <th>
            Felder
        </th>
        <th>
            Anwendungen
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>
        <td>
            @{
                foreach (var feld in item.MeineFelder)
                {
                    @:  @feld.Name <br />
                }
            }
        </td>
        <td>
            @{
                foreach (var anwendung in item.MeineAnwendungen)
                {
                    @:  @anwendung.Name <br />
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
