@model IEnumerable<DataDictionary.Models.Datentyp>

@{
    ViewBag.Title = "Datentyen";
}

<h2>Datentypen</h2>

<h4>
    @*@Html.ActionLink("Neuer Datentyp", "Create")*@
    <input type="button" class="btn btn-info" value="Neuer Datentyp" onclick="location.href='@Url.Action("Create")'" />
</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            Anzahl Felder
        </th>
        <th>
            Anzahl Anwendungen
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.MeineFelder.Count()
        </td>
        <td>
            @item.MeineAnwendungen.Count()
        </td>
        <td>            
           @* @Html.ActionLink("Details", "Details", new { id=item.Id })*@
            <input type="button" class="btn btn-info" value="Details" onclick="location.href='@Url.Action("Details", new { id = item.Id }) '" />
        </td>
    </tr>
}

</table>
