<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Intranet - Data Dictionary</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    

    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/tether.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/multiSel_Search")
</head>
<body>
    <header>
        @*<div class="content-wrapper">*@
        <div class="float-left">
            <p class="site-title">@Html.ActionLink("Data Dictionary", "Index", "Anwendungen")</p>
        </div>
        <div class="float-right">
            <section id="login">
                angemeldet als: @System.Security.Principal.WindowsIdentity.GetCurrent().Name.Replace(@"MAG_VILLACH\", "")
            </section>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Anwendungen", "Index", "Anwendungen")</li>
                    <li>@Html.ActionLink("Datentypen", "Index", "Datentypen")</li>
                    <li>@Html.ActionLink("Felder ermitteln", "ErmittleFelder", "Felder")</li>
                </ul>
            </nav>
        </div>
        @*</div>*@
    </header>
    <div id="body">
        <div id="content">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div style="text-align: center">
                <p>&copy; @DateTime.Now.Year - Stadt Villach</p>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>