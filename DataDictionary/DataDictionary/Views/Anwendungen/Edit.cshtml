@model DataDictionary.Models.Anwendung

@{
    ViewBag.Title = "Edit";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.LabelFor(model => model.Name)
            <div>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "")
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Beschreibung)
            <div>
                @Html.EditorFor(model => model.Beschreibung)
                @Html.ValidationMessageFor(model => model.Beschreibung, "")
            </div>
        </div>
        <hr />
        <div>
            <label>Datentypen</label>
            <div>
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<DataDictionary.ViewModels.Datentyp_Anwendung_VM> datentypen = ViewBag.Datentyp;

                            foreach (var datentyp in datentypen)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
                                           name="selectedDatentypen"
                                           value="@datentyp.DatentypID"
                                           @(Html.Raw(datentyp.Assigned ? "checked=\"checked\"" : "")) />
                                        @datentyp.DatentypName
                                        @:</td>
                            }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>
        <hr />
        <div>
            <label>Felder</label>
            <div>
            @{
                List<DataDictionary.ViewModels.Anwendung_Feld_VM> felder = ViewBag.Feld;
                List<int> mFelder = new List<int>();

                foreach (var datentyp in Model.MeineDatentypen)
                {
                    <h5>@datentyp.Name</h5>
                    @: <table>
                        @: <tr>
                                foreach (var feld1 in datentyp.MeineFelder)
                                {
                                    mFelder.Add(feld1.Id);
                                    foreach (var feld in felder)
                                    {
                                        if (feld.FeldID == feld1.Id)
                                        {
                                            <td>
                                                <input type="checkbox"
                                                       name="selectedFelder"
                                                       value="@feld.FeldID"
                                                       @(Html.Raw(feld.Assigned ? "checked=\"checked\"" : "")) />
                                                @feld.FeldName
                                            </td>
                                        }

                                    }
                                } 
                        @:</tr>
                    @:</table>
                }
            }

            </div>
        </div>
        <div>
            <hr />
            <input type="submit" value="Speichern"/>
            <input type="button" class="btn btn-info" value="Zurück zur Übersicht" onclick="location.href='@Url.Action("Index")'" />
            <input type="button" class="btn btn-info" value="Zurück zu Details" onclick="location.href='@Url.Action("Details", new { id = Model.Id })'" />
            <hr />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
