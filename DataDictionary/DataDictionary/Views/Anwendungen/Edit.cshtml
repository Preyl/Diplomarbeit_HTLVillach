@model DataDictionary.Models.Anwendung

@{
    ViewBag.Title = "Edit";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        <hr />
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.LabelFor(model => model.Name)
            <div>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "")
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Beschreibung)
            <div>
                @Html.EditorFor(model => model.Beschreibung)
                @Html.ValidationMessageFor(model => model.Beschreibung, "")
            </div>
        </div>

        <div>
            <label>Datentypen</label>
            <div>
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<DataDictionary.ViewModels.Datentyp_Anwendung_VM> datentypen = ViewBag.Datentyp;

                            foreach (var datentyp in datentypen)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
                                           name="selectedDatentypen"
                                           value="@datentyp.DatentypID"
                                           @(Html.Raw(datentyp.Assigned ? "checked=\"checked\"" : "")) />
                                        @datentyp.DatentypName
                                        @:</td>
                            }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>
        <div>
            <hr />
            <input type="submit" value="Speichern"/>
            <hr />
        </div>
    </div>
}

<div>
   <h5>@Html.ActionLink("Zurück zur Übersicht", "Index")</h5> 
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
