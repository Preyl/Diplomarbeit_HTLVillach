@model IEnumerable<DataDictionary.Models.Anwendung>

@{
    ViewBag.Title = "Anwendungen";
}

<h2>Anwendungen</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Anzahl Datentypen
        </th>
        <th>
            Anzahl Felder
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.Datentypen.Count() <br />
        </td>
        <td>
             @item.Felder.Count() <br />
        </td>
        <td>
           @* @Html.ActionLink("Details", "Details", new { id=item.Id })*@
            <input type="button" class="btn btn-info" value="Details" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" />
        </td>
    </tr>
}

</table>
